{
  "name": "bitflyer_data_getter", // この関数名で作成or上書き
  "description": "bitflyer のデータを S3 へ保存する",
  "region": "ap-northeast-1",
  "runtime": "python3.7",
  "handler": "lambda_function.lambda_handler",
  "role": "arn:…/service-role/bitflyer_data_getter_role",
  "timeout": 300,
  "memory": 128,
  "requirements": ["ccxt", "python-dateutil", "tzlocal"],
  "variables": {
    "TZ": "Asia/Tokyo",
    "DISCORD_POST_URL": "https://discordapp.com/api/webhooks/…" // ローカルテスト時は、export コマンドで設定しておく
  }
}
